<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 108 108">
  <!-- Background Circle -->
  <defs>
    <linearGradient id="bgGrad" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#059669;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#047857;stop-opacity:1" />
    </linearGradient>
    <filter id="shadow" x="-20%" y="-20%" width="140%" height="140%">
      <feDropShadow dx="0" dy="2" stdDeviation="3" flood-color="#000" flood-opacity="0.2"/>
    </filter>
  </defs>
  
  <!-- Background -->
  <circle cx="54" cy="54" r="54" fill="url(#bgGrad)"/>
  
  <!-- Inner Circle Border -->
  <circle cx="54" cy="54" r="50" fill="none" stroke="#ffffff" stroke-width="2" opacity="0.3"/>
  
  <!-- "S" Letter (for Selendang Sutra) -->
  <text x="54" y="68" 
        font-family="Arial Black, Arial, sans-serif" 
        font-size="52" 
        font-weight="900" 
        fill="#ffffff" 
        text-anchor="middle"
        filter="url(#shadow)">S</text>
  
  <!-- Utensils (Fork and Spoon) -->
  <g transform="translate(20, 40)" opacity="0.9">
    <!-- Spoon -->
    <ellipse cx="15" cy="8" rx="5" ry="8" fill="#ffffff"/>
    <line x1="15" y1="16" x2="15" y2="45" stroke="#ffffff" stroke-width="3" stroke-linecap="round"/>
    
    <!-- Fork -->
    <path d="M35 8 L35 42 M35 8 Q35 5 40 5 Q45 5 45 8 L45 14 M35 18 L35 42 M40 18 L40 42 M45 18 L45 42" 
          stroke="#ffffff" 
          stroke-width="3" 
          stroke-linecap="round" 
          stroke-linejoin="round" 
          fill="none"/>
  </g>
  
  <!-- Decorative dots -->
  <circle cx="20" cy="75" r="2" fill="#ffffff" opacity="0.5"/>
  <circle cx="88" cy="75" r="2" fill="#ffffff" opacity="0.5"/>
  <circle cx="25" cy="82" r="1.5" fill="#ffffff" opacity="0.3"/>
  <circle cx="83" cy="82" r="1.5" fill="#ffffff" opacity="0.3"/>
</svg>